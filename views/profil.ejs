<%- include('partials/header') %>

  <h1>Profil Pengguna</h1>

  <p><strong>Nama:</strong> <%= profil.nama %></p>
  <p><strong>Email:</strong> <%= profil.email %></p>

  <h3>Hobi:</h3>
  <% if (profil.hobi && profil.hobi.length > 0) { %>
    <ul>
      <% profil.hobi.forEach(item => { %>
        <li><%= item %></li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>Tidak ada data hobi.</p>
  <% } %>

  <h3>Tambah Hobi Baru</h3>
  <form action="/tambah-hobi" method="POST">
    <input type="text" name="hobiBaru" placeholder="Masukkan hobi baru" required>
    <button type="submit">Tambah</button>
  </form>
  
  <a href="/">Kembali ke Home</a>

  <%- include('partials/footer') %>
